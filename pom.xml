<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.library</groupId>
    <artifactId>SimpleLibrarySystem</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>war</packaging> <!-- Web项目设为war -->

    <properties>
        <maven.compiler.source>24</maven.compiler.source>
        <maven.compiler.target>24</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <spring.version>5.3.30</spring.version> <!-- Spring 5.3.x 是兼容JDK 17+的长期支持版 -->
        <mybatis.version>3.5.15</mybatis.version> <!-- MyBatis 最新稳定版，兼容JDK 24 -->
        <mybatis-spring.version>2.0.7</mybatis-spring.version> <!-- 适配Spring 5.3 + MyBatis 3.5 -->
        <mysql.version>8.0.33</mysql.version> <!-- MySQL 8.0 最新稳定驱动 -->
        <jetty.version>9.4.52.v20230823</jetty.version> <!-- Jetty 9.4.x 兼容JDK 24 + Servlet 4.0 -->
        <servlet.version>4.0.1</servlet.version> <!-- Servlet 4.0 适配Jetty 9.4 + JDK 24 -->
    </properties>

    <dependencies>
        <!-- Spring MVC核心（适配JDK 24） -->
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-webmvc</artifactId>
            <version>${spring.version}</version>
        </dependency>
        <!-- Spring 核心容器 -->
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-context</artifactId>
            <version>${spring.version}</version>
        </dependency>
        <!-- MyBatis核心 -->
        <dependency>
            <groupId>org.mybatis</groupId>
            <artifactId>mybatis</artifactId>
            <version>${mybatis.version}</version>
        </dependency>
        <!-- MyBatis整合Spring -->
        <dependency>
            <groupId>org.mybatis</groupId>
            <artifactId>mybatis-spring</artifactId>
            <version>${mybatis-spring.version}</version>
        </dependency>
        <!-- MySQL 8.0 驱动（适配JDK 24，注意groupId是com.mysql.cj） -->
        <dependency>
            <groupId>com.mysql</groupId>
            <artifactId>mysql-connector-j</artifactId> <!-- MySQL 8.0 驱动新artifactId（替代mysql-connector-java） -->
            <version>${mysql.version}</version>
        </dependency>
        <!-- 数据源（HikariCP 高性能，替代DBCP，兼容JDK 24） -->
        <dependency>
            <groupId>com.zaxxer</groupId>
            <artifactId>HikariCP</artifactId>
            <version>5.0.1</version>
        </dependency>
        <!-- Servlet API（适配Jetty 9.4 + JDK 24） -->
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>javax.servlet-api</artifactId>
            <version>${servlet.version}</version>
            <scope>provided</scope> <!-- 由容器提供，不打包 -->
        </dependency>
        <!-- JSP API -->
        <dependency>
            <groupId>javax.servlet.jsp</groupId>
            <artifactId>jsp-api</artifactId>
            <version>2.2</version>
            <scope>provided</scope>
        </dependency>
        <!-- JSTL（页面渲染） -->
        <dependency>
            <groupId>javax.servlet.jsp.jstl</groupId>
            <artifactId>jstl-api</artifactId>
            <version>1.2</version>
            <exclusions>
                <exclusion>
                    <groupId>javax.servlet</groupId>
                    <artifactId>servlet-api</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>javax.annotation</groupId>
            <artifactId>javax.annotation-api</artifactId>
            <version>1.3.2</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.glassfish.web</groupId>
            <artifactId>jstl-impl</artifactId>
            <version>1.2</version>
        </dependency>
        <!-- Jackson（返回JSON，兼容JDK 24） -->
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
            <version>2.15.2</version>
        </dependency>
    </dependencies>

    <!-- 插件配置（适配JDK 24） -->
    <build>
        <!-- 解决JDK 24编译警告：添加release参数 -->
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <version>3.11.0</version> <!-- 支持JDK 24的最新编译插件 -->
                    <configuration>
                        <release>24</release> <!-- 替代source/target，适配JDK 9+模块化 -->
                        <encoding>UTF-8</encoding>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>

        <plugins>
            <!-- 编译插件（核心） -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
            </plugin>
            <!-- Jetty插件（本地启动项目，兼容JDK 24） -->
            <plugin>
                <groupId>org.eclipse.jetty</groupId>
                <artifactId>jetty-maven-plugin</artifactId>
                <version>${jetty.version}</version>
                <configuration>
                    <webApp>
                        <contextPath>/</contextPath> <!-- 根路径访问，移到webApp标签内 -->
                    </webApp>
                    <httpConnector>
                        <port>8080</port> <!-- 项目启动端口 -->
                    </httpConnector>
                    <!-- 解决JDK 24的反射限制 -->
                    <jvmArgs>
                        --add-opens=java.base/java.lang=ALL-UNNAMED
                        --add-opens=java.base/java.io=ALL-UNNAMED
                    </jvmArgs>
                </configuration>
            </plugin>
            <!-- 打包插件（确保war包正常生成） -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>3.3.2</version>
                <configuration>
                    <failOnMissingWebXml>false</failOnMissingWebXml> <!-- 兼容Servlet 3.0+无web.xml场景 -->
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
